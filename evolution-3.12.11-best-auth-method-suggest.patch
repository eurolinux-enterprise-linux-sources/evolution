+static gint
+e_auth_combo_box_get_preference_level (const gchar *authproto)
+{
+	/* In order of preference, from the least to the best */
+	const gchar *protos[] = {
+		"CRAM-MD5",
+		"DIGEST-MD5",
+		"NTLM",
+		"GSSAPI"
+	};
+	gint ii;
+
+	if (!authproto)
+		return -1;
+
+	for (ii = 0; ii < G_N_ELEMENTS (protos); ii++) {
+		if (g_ascii_strcasecmp (protos[ii], authproto) == 0)
+			return ii;
+	}
+
+	return -1;
+}
